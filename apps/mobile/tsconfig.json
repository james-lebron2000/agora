{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@agora/sdk": ["../../packages/sdk/src/index.ts"],
      "@agora/sdk/*": ["../../packages/sdk/src/*.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "../../packages/sdk/src/**/*.ts"],
  "exclude": ["node_modules", "../../packages/sdk/node_modules"]
}
