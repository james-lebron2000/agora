{
  "rewrites": [
    { "source": "/relay", "destination": "http://45.32.219.241:8789" },
    { "source": "/relay/(.*)", "destination": "http://45.32.219.241:8789/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "apps/web/dist",
  "framework": "vite"
}
